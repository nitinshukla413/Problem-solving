
#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n;
    long int max=0,count=0;
    long int a[n];
    cin>>n;
    
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
        if(a[i]>max)
        {
             max=a[i];
            
        }   
    }
    
    for(int i=0;i<n;i++)
    {
        if(a[i]==max)
        {
            count++;
            
        }


    }
    cout<<count;

}
